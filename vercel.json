{
  "buildCommand": "npm run build",
  "installCommand": "apt-get update && apt-get install -y libatomic1 && npm install",
  "functions": {
    "src/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "build": {
    "env": {
      "PRISMA_GENERATE_DATAPROXY": "true",
      "PRISMA_GENERATE_SKIP_DOWNLOAD": "true"
    }
  }
}
